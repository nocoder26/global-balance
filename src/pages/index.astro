---
import '../styles/global.css';
import SearchEngine from '../components/SearchEngine';
import servicesData from '../data/services.json';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Discover global alternatives to US tech giants. Support digital creators from around the world." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Global Balance Engine - Equalize the World</title>
  </head>
  <body class="min-h-screen bg-stone-50 text-teal-900">
    <!-- Decorative Background -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <div class="absolute top-0 -left-40 w-80 h-80 bg-teal-200/30 rounded-full blur-3xl"></div>
      <div class="absolute top-1/3 -right-40 w-96 h-96 bg-emerald-200/30 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-1/3 w-72 h-72 bg-lime-200/20 rounded-full blur-3xl"></div>
    </div>

    <!-- Header -->
    <header class="py-6 px-4">
      <nav class="max-w-6xl mx-auto flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 text-teal-800 hover:text-teal-600 transition-colors">
          <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10" />
            <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
          </svg>
          <span class="font-semibold">Global Balance</span>
        </a>
        <a
          href="https://github.com/global-balance-engine/global-balance-engine/issues/new?template=suggest-service.md&title=[Suggestion]%20"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-teal-700 hover:text-teal-500 transition-colors"
        >
          Suggest a Service
        </a>
      </nav>
    </header>

    <!-- Hero Section -->
    <main class="px-4 pb-16">
      <section class="max-w-4xl mx-auto text-center pt-12 pb-16">
        <h1 class="text-5xl md:text-6xl font-bold text-teal-900 mb-6 leading-tight">
          Equalize the World
        </h1>
        <p class="text-xl md:text-2xl text-teal-700/80 max-w-2xl mx-auto mb-12">
          Shift your digital wealth to global creators.
          <br />
          <span class="text-lg">Discover privacy-focused alternatives from every corner of the globe.</span>
        </p>
      </section>

      <!-- Search Engine Component -->
      <SearchEngine data={servicesData} client:load />
    </main>

    <!-- Footer -->
    <footer class="border-t border-teal-200/50 bg-white/30 backdrop-blur-sm">
      <div class="max-w-6xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- About -->
          <div>
            <h3 class="font-semibold text-teal-800 mb-3">About Global Balance</h3>
            <p class="text-sm text-teal-700/80">
              We curate alternatives to major tech platforms, helping you discover
              innovative services from around the world.
            </p>
          </div>

          <!-- Links -->
          <div>
            <h3 class="font-semibold text-teal-800 mb-3">Community</h3>
            <ul class="space-y-2 text-sm">
              <li>
                <a
                  href="https://github.com/global-balance-engine/global-balance-engine/issues/new?template=suggest-service.md&title=[Suggestion]%20"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-teal-600 hover:text-teal-500 transition-colors inline-flex items-center gap-1"
                >
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 20h9M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z" />
                  </svg>
                  Suggest an Edit
                </a>
              </li>
              <li>
                <a
                  href="https://github.com/global-balance-engine/global-balance-engine"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-teal-600 hover:text-teal-500 transition-colors inline-flex items-center gap-1"
                >
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z" />
                  </svg>
                  View on GitHub
                </a>
              </li>
            </ul>
          </div>

          <!-- Disclaimer -->
          <div>
            <h3 class="font-semibold text-teal-800 mb-3">Disclaimer</h3>
            <p class="text-sm text-teal-700/80">
              We can make mistakes, including about people, so double-check it.
              Service availability is verified periodically but may change.
            </p>
          </div>
        </div>

        <!-- Copyright -->
        <div class="mt-12 pt-6 border-t border-teal-200/50 text-center text-sm text-teal-600/70">
          <p>
            Built with care for a more balanced digital world.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
